{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"],
    "baseUrl": "./src",
    "paths": {
      "@middleware/*": ["middleware/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@db/*": ["db/*"],
      "@models/*": ["models/*"],
      "@routes/*":["routes/*"],
      "@validation/*":["validation/*"], 
      "@libs/*": ["libs/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": ["src"]
}